<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cab302.eduplanner.controller.TaskFlowController"
      spacing="8" prefWidth="520" prefHeight="420" styleClass="dialog" style="-fx-padding: 16;">
    <Label text="Task" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="subjectField" promptText="Subject (optional)"/>
    <TextField fx:id="titleField" promptText="Title *"/>
    <TextField fx:id="dueDateField" promptText="Due date (YYYY-MM-DD)"/>
    <TextArea  fx:id="notesArea" promptText="Notes (optional)" prefRowCount="4"/>

    <HBox spacing="8">
        <TextField fx:id="weightField" promptText="Weight (optional)"/>
        <TextField fx:id="achievedMarkField" promptText="Achieved (optional)"/>
        <TextField fx:id="maxMarkField" promptText="Max (optional)"/>
    </HBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: #c23b22;"/>
    <HBox spacing="8">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save"   onAction="#onSave" defaultButton="true"/>
    </HBox>
</VBox>
