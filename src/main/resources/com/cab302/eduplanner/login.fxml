<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="287.0" prefWidth="435.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.eduplanner.controller.LoginController">
    <children>
        <VBox alignment="CENTER"
              layoutX="20.0" layoutY="16.0"
              prefHeight="256.0" prefWidth="396.0"
              spacing="10.0"
              AnchorPane.bottomAnchor="15.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="19.0"
              AnchorPane.topAnchor="16.0"
              styleClass="auth-container">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <Label contentDisplay="CENTER" text="EduPlanner - Login" styleClass="app-title"/>

            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="245.0" promptText="Password"/>

            <HBox alignment="CENTER" spacing="10" styleClass="actions-row">
                <children>
                    <Button fx:id="loginButton" alignment="CENTER" onAction="#onLogin" styleClass="primary" text="Login" textAlignment="CENTER"/>
                    <Button fx:id="registerButton" alignment="CENTER" contentDisplay="CENTER" onAction="#openRegister" styleClass="secondary" text="Register" textAlignment="CENTER"/>
                </children>
            </HBox>

            <Label fx:id="messageLabel" styleClass="error-text"/>
        </VBox>
    </children>
</AnchorPane>

