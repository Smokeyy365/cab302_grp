<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cab302.eduplanner.controller.DashboardController">

    <!-- Main Header -->
    <top>
        <HBox spacing="12">
            <padding>
                <Insets bottom="10" left="12" right="12" top="10" />
            </padding>
            <Label fx:id="greetingLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Welcome back, User" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="localTimeLabel" text="12:00" />
        </HBox>
    </top>

    <!-- Two Columns -->
    <center>
        <GridPane hgap="16">
            <padding>
                <Insets bottom="12" left="12" right="12" top="10" />
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="80" />
                <ColumnConstraints percentWidth="20" />
            </columnConstraints>

            <children>
                <!-- Left: Tasks Panel -->
                <VBox spacing="8" GridPane.columnIndex="0">
                    <children>
                        <!-- Toolbar -->
                        <HBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Tasks" />
                                <Pane HBox.hgrow="ALWAYS" />
                                <Button fx:id="sortButton" text="[Sort: Due Date]" />
                                <Button fx:id="newButton" text="+ New" />
                                <Button fx:id="calendarButton" text="Calendar View" />
                                <Button fx:id="detailButton" text="Detail View" />
                            </children>
                        </HBox>

                        <!-- Cards List -->
                        <ScrollPane fitToWidth="true" prefViewportHeight="480.0">
                            <content>
                                <VBox fx:id="cardsBox" spacing="6">
                                    <!-- placeholder cards for sizing (optional) -->
                                    <HBox spacing="10" style="-fx-padding:10; -fx-border-color: -fx-box-border; -fx-border-radius:6; -fx-background-radius:6;">
                                        <children>
                                            <Label text="COMP201 Essay" />
                                            <Label style="-fx-opacity:0.75;" text="Due: 24 Sep" />
                                            <Pane HBox.hgrow="ALWAYS" />
                                            <CheckBox />
                                        </children>
                                    </HBox>
                                    <HBox spacing="10" style="-fx-padding:10; -fx-border-color: -fx-box-border; -fx-border-radius:6; -fx-background-radius:6;">
                                        <children>
                                            <Label text="MATH101 Report" />
                                            <Label style="-fx-opacity:0.75;" text="Due: 27 Sep" />
                                            <Pane HBox.hgrow="ALWAYS" />
                                            <CheckBox />
                                        </children>
                                    </HBox>
                                </VBox>
                            </content>
                        </ScrollPane>

                        <Label fx:id="emptyLabel" text="No tasks" visible="false" />
                    </children>
                </VBox>

                <!-- Right: Widgets Rail -->
                <VBox spacing="8" GridPane.columnIndex="1">
                    <children>
                        <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Widgets" />
                        <ScrollPane fitToWidth="true" prefViewportHeight="480.0">
                            <content>
                                <StackPane>
                                    <VBox spacing="8" alignment="CENTER">
                                        <children>
                                            <Button fx:id="flashcardsTile" text="Flashcards" prefWidth="180.0" prefHeight="120.0"/>
                                            <Button fx:id="notesTile" text="Notes" prefWidth="180.0" prefHeight="120.0" disable="true"/>
                                            <Button fx:id="pomodoroTile" text="Pomodoro" prefWidth="180.0" prefHeight="120.0" disable="true"/>
                                        </children>
                                    </VBox>
                                </StackPane>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
